<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/backend_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kyodong_img_001_03"
            />
        <ImageView
            android:id="@+id/forward_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/kyodong_img_001_02"
            />
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            >

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/main_icon"
            android:layout_width="@dimen/dimen_192"
            android:layout_height="@dimen/dimen_192"
            android:src="@drawable/kyodong_img_001_01"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_240"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/main_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/main_text"
            android:textSize="@dimen/font_46"
            android:fontFamily="@font/ridibatang"
            android:textColor="#FFFFFF"
            android:layout_marginTop="@dimen/dimen_48"
            />

        <TextView
            android:layout_width="@dimen/dimen_360"
            android:layout_height="@dimen/dimen_64"
            android:background="@drawable/out_line"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/screen_touch"
            android:textSize="@dimen/font_28"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:fontFamily="@font/nanumsquare_r"
            android:layout_marginBottom="@dimen/dimen_144"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_screen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>