<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/kyodong_bg_01"
            />

        <ImageView
            android:layout_width="@dimen/dimen_96"
            android:layout_height="@dimen/dimen_96"
            app:layout_constraintTop_toTopOf="@id/happyText"
            app:layout_constraintBottom_toBottomOf="@id/happyText"
            app:layout_constraintEnd_toStartOf="@id/happyText"
            android:src="@drawable/kyodong_logo_02"
            android:layout_marginEnd="@dimen/dimen_24"
            />

        <TextView
            android:id="@+id/happyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/dimen_113"
            android:textSize="@dimen/font_60"
            android:text="전통을 기반으로 미래를 창조하는 행복 교동 교육"
            android:textColor="#000000"
            android:fontFamily="@font/ridibatang"
            />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/history"
            android:layout_width="@dimen/dimen_384"
            android:layout_height="@dimen/dimen_544"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/dimen_156"
            >
            <ImageView
                android:layout_width="@dimen/dimen_384"
                android:layout_height="@dimen/dimen_544"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/kyodong_img_002_01"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="교동의 역사"
                android:fontFamily="@font/ridibatang"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_38"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/museum"
            android:layout_width="@dimen/dimen_384"
            android:layout_height="@dimen/dimen_544"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/history"
            android:layout_marginStart="@dimen/dimen_24"
            >
            <ImageView
                android:layout_width="@dimen/dimen_384"
                android:layout_height="@dimen/dimen_544"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/kyodong_img_002_02"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="나이테 1894"
                android:fontFamily="@font/ridibatang"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_38"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/album"
            android:layout_width="@dimen/dimen_384"
            android:layout_height="@dimen/dimen_544"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/museum"
            android:layout_marginStart="@dimen/dimen_24"
            >
            <ImageView
                android:layout_width="@dimen/dimen_384"
                android:layout_height="@dimen/dimen_544"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/kyodong_img_002_03"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="졸업 앨범"
                android:fontFamily="@font/ridibatang"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_38"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/great_man"
            android:layout_width="@dimen/dimen_384"
            android:layout_height="@dimen/dimen_544"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/album"
            android:layout_marginStart="@dimen/dimen_24"
            >
            <ImageView
                android:layout_width="@dimen/dimen_384"
                android:layout_height="@dimen/dimen_544"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/kyodong_img_002_04"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="자랑스러운 교동인"
                android:fontFamily="@font/ridibatang"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/font_38"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>